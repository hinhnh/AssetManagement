@model QuanLyTS.Models.tblChiTietChuyen

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa điều chuyển tài sản</h2>

<h3>Bạn chắc chắn muốn xóa nó?</h3>
<div>    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên lần chuyển
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblQuaTrinhDiChuyen.TenLanChuyen)
        </dd>
        <dt>
            Tên tài sản
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblTaiSan.TenTaiSan)
        </dd>
        <dt>
            Số lượng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>

        <dt>
            Tên kho
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblKhoLuuTru.TenKho)
        </dd>

        <dt>
            Tên nơi SD
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblNoiSuDung.TenNoiSD)
        </dd>

        <dt>
            Mã người điều chuyển
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblQuaTrinhDiChuyen.MaNguoiDieuChuyen)
        </dd>

        <dt>
            Mã loại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblTaiSan.MaLoai)
        </dd>

        <dt>
            Tình trạng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblTinhTrang.MoTa)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay về danh sách", "Index")
        </div>
    }
</div>
