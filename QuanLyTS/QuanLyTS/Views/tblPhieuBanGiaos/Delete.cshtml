@model QuanLyTS.Models.tblPhieuBanGiao

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa phiếu giao</h2>

<h3>Bạn chắc chắn muốn xóa nó ?</h3>
<div>    
    <hr />
    <dl class="dl-horizontal">
        
        

        <dt>
            Tên phiếu giao
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenPhieuGiao)
        </dd>
        <dt>
            Tên đơn vị
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblDonVi.TenDonVi)
        </dd>
        <dt>
            Họ tên giáo viên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblCanBoGiaoVien.HoTen)
        </dd>

        <dt>
            Ngày giao
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayGiao)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay về danh sách", "Index")
        </div>
    }
</div>
