@model IEnumerable<QuanLyTS.Models.tblPhieuBanGiao>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Phiếu giao tài sản</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Ngày giao
        </th>
        <th>
            Tên phiếu giao
        </th>
        <th>
            Họ tên giáo viên
        </th>
        <th>
            Tên đơn vị
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NgayGiao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenPhieuGiao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblCanBoGiaoVien.HoTen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblDonVi.TenDonVi)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaPhieuGiao }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaPhieuGiao }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaPhieuGiao })
        </td>
    </tr>
}

</table>
