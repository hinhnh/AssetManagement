@model QuanLyTS.Models.tblLoaiTaiSan

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa loại tài sản</h2>

<h3>Bạn thật sự muốn xóa loại tài sản này ?</h3>
<div>
 
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên loại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenLoai)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay về danh sách", "Index")
        </div>
    }
</div>
