@model IEnumerable<QuanLyTS.Models.tblLoaiTaiSan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Loại tài sản</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên loại
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenLoai)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaLoai }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaLoai }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaLoai })
        </td>
    </tr>
}

</table>
