@model QuanLyTS.Models.tblKhoLuuTru

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa kho lưu trữ</h2>

<h3>Bạn thật sự muốn xóa nó ?</h3>
<div>    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên kho
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenKho)
        </dd>

        <dt>
            Ghi chú
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GhiChu)
        </dd>

        <dt>
            Mã đơn vị
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tblBoPhan.MaDonVi)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay về danh sách", "Index")
        </div>
    }
</div>
