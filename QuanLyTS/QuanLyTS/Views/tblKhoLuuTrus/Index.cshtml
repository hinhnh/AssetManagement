@model IEnumerable<QuanLyTS.Models.tblKhoLuuTru>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kho lưu trữ</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên kho
        </th>
        <th>
            Ghi chú
        </th>
        <th>
            Mã đơn vị
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenKho)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GhiChu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tblBoPhan.MaDonVi)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaKho }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaKho }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaKho })
        </td>
    </tr>
}

</table>
